@model DPWVessel.Model.Features.JIPReports.PrintDetailsGetByVistRefNoResponse
@{
    Layout = null;
}

<!--This Will Show Multiple Exception List-->

<!DOCTYPE html>

<html>
<head>

    <title>View || JIP Exceptions</title>
    <link href="@Url.Content("~/Content/css/icons/icomoon/styles.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" ) />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.8.2/angular.min.js" integrity="sha512-7oYXeK0OxTFxndh0erL8FsjGvrl2VMDor6fVqzlLGfwOQQqTbYsGPv4ZZ15QHfSk80doyaM0ZJdvkyDcVO7KFA==" crossorigin="anonymous"></script>
    <script src="~/Scripts/js/main/jquery.min.js"></script>
    <link rel="icon" type="~/Content/images/favicon.ico" sizes="16x16" href="~/Content/images/favicon.ico">
    <style>
        .heading-print {
            color: #173a64;
            font-weight: bold;
        }
        .row{
            margin:0px!important
        }
        .badge {
            font-size: 15px;
            width: 90px;
        }
        body{
            background-color:white!important
        }
        .table-striped tbody tr:nth-of-type(odd){
                background-color: white!important;
        }
        .table thead th{
            background: #e7e7e7!important;
        }
        .badge-size {
            width: 70px;
            padding: 8px 6px 5px 7px;
        }
        .table-bordered td, .table-bordered th{
            border: 1px solid #979797!important;
        }

        .badge-xs {
            font-size: 9px;
            -webkit-transform: translate(0, -2px);
            -ms-transform: translate(0, -2px);
            -o-transform: translate(0, -2px);
            transform: translate(0, -2px);
        }

        .badge-sm {
            -webkit-transform: translate(0, -2px);
            -ms-transform: translate(0, -2px);
            -o-transform: translate(0, -2px);
            transform: translate(0, -2px);
        }
        /*All Table Badges*/

        .badge-Completed {
            /*background-color: #2cb97c!important;*/
            background-color: #6c757d !important;
            text-transform: uppercase;
        }

        .badge-InProgress {
            background-color: #65becc !important;
            text-transform: uppercase;
        }

        .badge-OverDue {
            background-color: red !important;
            text-transform: uppercase;
        }

        .badge-News {
            background-color: #c776aa !important;
            text-transform: uppercase;
        }

        .badge-Closed {
            background-color: #463d32 !important;
            text-transform: uppercase;
        }

        .badge-Rejected {
            background-color: #dc3545 !important;
            text-transform: uppercase;
        }

        img {
            height: 80px;
            border: none;
        }

        @@font-face {
            font-family: 'AvenirLTStd-Book';
            src: url('../../fonts/AvenirLTStd-Book.otf') format('opentype');
        }

        @@font-face {
            font-family: 'AvenirLTStd-Medium';
            src: url('../../fonts/AvenirLTStd-Medium.otf') format('opentype');
        }

        @@font-face {
            font-family: 'AvenirLTStd-Roman';
            src: url('../../fonts/AvenirLTStd-Roman.otf') format('opentype');
        }

        h2 {
            font-family: AvenirLTStd-Medium !important;
        }

        .testRotate {
            transform: rotate(180deg);
            writing-mode: vertical-rl;
        }
           #StudyHeading
        {
            margin-left: 20px;
           margin-top: 70px;
        }
        #otherheading
        {
            margin-left: 20px;
        }
           .truncate {
     width: fit-content;
    word-break: break-all;
}
         .headingbgColor  {
               background: #e7e7e7 ;
           }
         .tblue{
             color:#173a64 !important;
         }
    </style>
</head>

<body>
    @foreach(var item in Model.ExceptionListForReport)
    {

    
    <div>
        <div class="row page-titles" style="padding:10px">
            <table class="table-bordered tblue table" style="border: 1px solid black;">
                <tr style="border: 1px solid black; text-align:center">
                    <td class="text-center ">
                        <img src="~/Content/images/saudiport-logo.png" style="width:186.109px;height:148px" />
                    </td>
                    <td align="center" style="vertical-align:inherit">
                        <h1 class="tblue" style="font-size:30px">
                            <b>
                                اتفاقية البناء والتشغيل ونقل الملكية
                                مؤاشرات الأداء الرئيسة ملحق (8)
                                اتاحية الرصيف (@item.EType)
                            </b>
                            <b>JIP/DPW/@item.EType/@DateTime.Now.ToString("yyyy")-@Model.Sequence</b>
                        </h1>
                        <h1 class="tblue" style="font-weight:600;">DATE <span style="color:#cb3655 !important">  @DateTime.Now.ToString("dd/MM/yyyy")</span> TIME <span style="color:#cb3655 !important"> @DateTime.Now.ToString("HH:mm")</span> </h1>
                    </td>
                    <td style="width:25%;text-align:center">
                        @*<table style="width:100%">
                                <tr>
                                    <th>Print Date</th>
                                    <td>@DateTime.Now.ToString("dd-MM-yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Print Time</th>
                                    <td>@DateTime.Now.ToString("hh:mm tt")</td>
                                </tr>
                            </table>*@
                        <img src="~/Content/images/dpworldlogo.png" style="height:96px;margin: 17px;" />
                    </td>
                </tr>
            </table>


        </div>


        <div class="container-fluid general">
            <table class="table table_heading table-bordered table-striped text-center">
                <thead class="tblue" >
                    <tr>
                        <th>
                            اسم السفينة<br />
                            Vessel Name
                        </th>
                        <th>
                            رقم المرجع<br />
                            Reference No
                        </th>
                        <th>
                            التاريخ
                            <br />Date
                        </th>
                        <th>
                            النافذة<br />
                            Window
                        </th>
                        <th>
                            وصول المخطاف
                            <br />Pilot Station
                        </th>
                        <th>
                            مغادرة المخطاف
                            <br />Pilot On Board
                        </th>
                        <th>
                            المدة
                            <br />Duration
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@item.VesselName</td>
                        <td>@item.RefNo</td>
                        <td>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Window</td>
                        <td>@item.PilotStation.Value.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@if (item.PilotOnBoard.HasValue)
                        { item.PilotOnBoard.Value.ToString("dd/MM/yyyy HH:mm"); }</td>
                        <td>@item.Duration</td>

                    </tr>
                </tbody>
                <tfoot class="table table_heading table-bordered table-striped">
                    <tr>
                        <th width="10%"  class="headingbgColor">
                            <div class="testRotate" id="otherheading">
                                شركة موانئ دبي العالمية
                                <br /> DP World
                            </div>
                        </th>
                        <td colspan="10" style="padding:0px!important">
                            <table width="100%">
                                <tr>
                                    <th class="text-left headingbgColor" style="width:20%">
                                        المبررات
                                        <br />Justifications
                                    </th>
                                    <td class="text-left">
                                        <div class="truncate">
                                            @item.Justifications
                                        </div>
                                    </td>
                                  
                                </tr>
                                <tr>
                                    <th class="text-left headingbgColor "  style="width:20%">
                                        الشرح
                                        <br />Explanation
                                    </th>
                                    <td  class="text-left">
                                        <div class="truncate">
                                            @item.Explanation
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!--Study-->
                    <tr>
                        <th width="10%"  class="headingbgColor">
                            <div class="testRotate" id="StudyHeading">
                                لجنة دراسة الإعفاءات
                                <br />Exceptions Study Committee
                            </div>
                        </th>
                        <td colspan="10" style="padding:0px!important">
                            <table width="100%">
                                <tr>
                                    <th  class="text-left headingbgColor" style="width:20%">
                                        الرأي
                                        <br /> Opinion
                                    </th>
                                    <td class="text-left">
                                        <div class="truncate">
                                            @item.Opinion
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <th class="text-left headingbgColor" style="width:20%">
                                        المرفقات
                                        <br />Attachments
                                    </th>
                                  
                                    <td  class="text-left">
                                    @item.StudyAttachment
                                    </td>
                                </tr>
                            </table>

                            @*<table width="100%">
                                <tr>
                                    <td width="20%"></td>
                                    <td width="20%">
                                        التوقيع
                                        <br />signature
                                    </td>
                                    <td width="30%"></td>
                                    <td width="20%">
                                        اعداد
                                        <br />Prepare
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                                <tr>
                                    <td width="20%"></td>
                                    <td width="20%">
                                        التوقيع
                                        <br />signature
                                    </td>
                                    <td width="30%"></td>
                                    <td width="20%">
                                        اعداد
                                        <br />Prepare
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                            </table>*@

                            <table width="100%">
                                <tr>
                                    <th width="20%" class="text-left headingbgColor">
                                        التوصيات
                                        <br />Recommendations
                                    </th>
                                    <td class="text-left">
                                        <div class="truncate">
                                            @item.Recommendations
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%">
                                <tr>
                                    <td width="20%"></td>
                                    <td width="20%">
                                        التوقيع
                                        <br />signature
                                    </td>
                                    <td width="30%"></td>
                                    <td width="20%">
                                        اعداد
                                        <br />Prepare
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                                <tr>
                                    <td width="20%"></td>
                                    <td width="20%">
                                        التوقيع
                                        <br />signature
                                    </td>
                                    <td width="30%"></td>
                                    <td width="20%">
                                        اعداد
                                        <br />Prepare
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                            </table>

                        </td>

                    </tr>

                    <!--Stering-->
                    <tr>
                        <th width="10%"  class="headingbgColor">
                            <div class="testRotate" id="otherheading">
                                اللجنة التوجيهية
                                <br />Steering Committee
                            </div>

                        </th>
                        <td colspan="10" style="padding:0px!important">
                            <table width="100%">
                                <tr>
                                    <th width="20%" class="text-left headingbgColor">
                                        القرار
                                        <br /> The Decision
                                    </th>
                                    <td width="80%" class="text-left">
                                        <div class="truncate">
                                            @item.Decision
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <table width="100%">
                                <tr>
                                    <td width="20%"></td>
                                    <td width="20%">
                                        التوقيع
                                        <br />signature
                                    </td>
                                    <td width="30%"></td>
                                    <td width="20%">
                                        اعداد
                                        <br />Prepare
                                    </td>
                                    <td width="10%"></td>
                                </tr>
                            </table>
                        </td>

                    </tr>
                </tfoot>
            </table>


        </div>
    </div>
    }
</body>
</html>
@if (Model.Print)
{
    <script>

window.print();
    </script>
}

