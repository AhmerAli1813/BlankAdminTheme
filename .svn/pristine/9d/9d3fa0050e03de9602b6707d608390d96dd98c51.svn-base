
@{
    ViewBag.Title = "JIP OverDue Email";
    Layout = "~/Views/Shared/_EmailLayout.cshtml";
}

<style>
    .btn-secondary {
        color: #fff;
        background-color: #00be5e;
    }

    .btn {
        text-decoration: none;
        position: relative;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        padding: 3px .875rem;
        font-size: .8125rem;
        line-height: 1.5385;
        border-radius: 14px;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .badge-danger2 {
        background: #c51f41;
        color: white;
    }

    .badge-warning {
        background-color: #ff7043;
    }

    .badge-secondary {
        background-color: #777;
    }

    .badge-danger {
        background-color: #f44336;
    }

    .badge-success {
        background-color: #4caf50;
    }

    .badge-primary {
        background-color: #2196f3;
    }

    .badge-standby {
        background-color: rgba(59, 85, 96, 0.7);
        color: white;
    }

    .badge {
        color: #fff;
        font-size: 15px !important;
        width: 90px;
        display: inline-block;
        padding: .3125rem .375rem;
        font-weight: bolder;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: .125rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .table1 tr th {
        text-align: left;
        font-size: 14px;
    }

    .table1 tr td {
        font-size: 12px;
    }

    .table1 tr {
        margin-top: 5px;
    }

    .table1 {
        width: 100%;
    }
      .text-capitalize
    {
       text-transform: capitalize;
    }
        .badge-info
    {
        color: #fff;
    background-color: #00bcd4;
    }
</style>

<h3 style="background-color: #00be5e;color: #fff;padding: 5px;"> JIP Exception OverDue ALERT !!!</h3>
<div style="border:1px solid;padding:5px;margin-bottom:10px">
    <table class="table1">
        <tbody>
            <tr>
                <td colspan="4" style="padding-bottom: 10px"><span style="font-size:18px;font-weight:bolder;text-decoration:underline">Exception Details:</span></td>
            </tr>
            <tr>
                <th>
                    Vessel Name:
                </th>
                <td>
                    @Model.VesselName
                </td>
                <th>
                    Reference No:
                </th>
                <td>
                    @Model.RefNo
                </td>
            </tr>

            <tr>
                <th>
                    Details:
                </th>
                <td>
                 <b>This Exception is OverDue </b>
                </td>
                <th>
                    CreatedAt:
                </th>
                <td>
                    @Model.CreatedAt
                </td>
            </tr>
           
            <tr>
                <th>Exception Type:</th>
                <td>
                    @Model.Etype
                </td>

</tr>


            @*<tr>
                    <th>
                        Remarks:
                    </th>
                </tr>
                <tr>
                    <td colspan="4">
                        @Model.Remarks
                    </td>
                </tr>*@
        </tbody>
    </table>
</div>


