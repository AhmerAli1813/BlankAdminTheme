                var toDate = moment(stringToDate($('#ToDate').val(), "dd/MM/yyyy", "/")).format('YYYY-MM-DDT23:59:59');
               
                $scope.ExceptionListOperationUser = $scope.ExceptionListOperationUser.filter(x=>x.PilotStation <= toDate && x.PilotStation >= fromDate);

